							"});\r",
							"\r",
							"pm.environment.set('costCenterId2', pm.response.json().newDepartment.costCenter);\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Gera um ID único de 24 caracteres alfanuméricos\r",
							"function generateUniqueID(length) {\r",
							"    var result = '';\r",
							"    var characters = 'abcdefghijklmnopqrstuvwxyz0123456789';\r",
							"    var charactersLength = characters.length;\r",
							"    for (var i = 0; i < length; i++) {\r",
							"        result += characters.charAt(Math.floor(Math.random() * charactersLength));\r",
							"    }\r",
							"    return result;\r",
							"}\r",
							"\r",
							"// Define o ID único gerado como variável de ambiente chamada 'uniqueID'\r",
							"pm.environment.set(\"costCenterId\", generateUniqueID(24));\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
